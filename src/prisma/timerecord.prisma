model TimeRecord {
  id String @unique @default(uuid())
  userId String 

  recordDate String?
  remarks Remark

  timeIn DateTime?
  timeOut DateTime?
  hoursWorked Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ALIAS MODELS

model User {
  id String @unique @default(uuid())
  timeRecord TimeRecord[]
}

enum Remark {
  Late
  Early
  OnTime
  Absent
  Leave
}